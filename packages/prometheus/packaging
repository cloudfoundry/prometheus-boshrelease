#!/usr/bin/env bash

set -eux

# Copy common utils
mkdir -p ${BOSH_INSTALL_TARGET}/common
cp -a ${BOSH_COMPILE_TARGET}/common/* ${BOSH_INSTALL_TARGET}/common

# Extract prometheus package
mkdir -p ${BOSH_INSTALL_TARGET}/bin
tar xzvf ${BOSH_COMPILE_TARGET}/prometheus/prometheus-1.8.2.linux-amd64.tar.gz
cp -a ${BOSH_COMPILE_TARGET}/prometheus-1.8.2.linux-amd64/* ${BOSH_INSTALL_TARGET}/bin
