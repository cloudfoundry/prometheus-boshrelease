#!/usr/bin/env bash

set -eux

# Copy common utils
mkdir -p ${BOSH_INSTALL_TARGET}/common
cp -a ${BOSH_COMPILE_TARGET}/common/* ${BOSH_INSTALL_TARGET}/common

# Extract kafka_exporter package
mkdir -p /tmp/kafka_exporter
tar -xzf ${BOSH_COMPILE_TARGET}/kafka_exporter/kafka_exporter-1.9.0.linux-amd64.tar.gz -C /tmp/kafka_exporter

mkdir -p ${BOSH_INSTALL_TARGET}/bin
cp /tmp/kafka_exporter/kafka_exporter-1.9.0.linux-amd64/kafka_exporter "${BOSH_INSTALL_TARGET}/bin/"
chmod +x "${BOSH_INSTALL_TARGET}/bin/kafka_exporter"
