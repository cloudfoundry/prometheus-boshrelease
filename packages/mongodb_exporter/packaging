#!/usr/bin/env bash

set -eux

# Copy common utils
mkdir -p ${BOSH_INSTALL_TARGET}/common
cp -a ${BOSH_COMPILE_TARGET}/common/* ${BOSH_INSTALL_TARGET}/common

# Extract mongodb_exporter package
mkdir -p /tmp/mongodb_exporter
tar -xzf ${BOSH_COMPILE_TARGET}/mongodb_exporter/mongodb_exporter-*.tar.gz -C /tmp/mongodb_exporter


mkdir -p ${BOSH_INSTALL_TARGET}/bin
cp /tmp/mongodb_exporter/mongodb_exporter-*/mongodb_exporter "${BOSH_INSTALL_TARGET}/bin/"
chmod +x "${BOSH_INSTALL_TARGET}/bin/mongodb_exporter"