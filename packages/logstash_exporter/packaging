#!/usr/bin/env bash

set -eux

# Copy common utils
mkdir -p ${BOSH_INSTALL_TARGET}/common
cp -a ${BOSH_COMPILE_TARGET}/common/* ${BOSH_INSTALL_TARGET}/common

# Extract logstash_exporter package
mkdir -p /tmp/logstash_exporter
tar -xzf ${BOSH_COMPILE_TARGET}/logstash_exporter/prometheus-logstash-exporter-*.tar.gz -C /tmp/logstash_exporter

mkdir -p ${BOSH_INSTALL_TARGET}/bin
cp /tmp/logstash_exporter/prometheus-logstash-exporter ${BOSH_INSTALL_TARGET}/bin/
chmod +x "${BOSH_INSTALL_TARGET}/bin/prometheus-logstash-exporter"